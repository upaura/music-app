# Music Studio - Production Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# Secret key for session management and JWT tokens
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-minimum-32-characters

# Database URL (PostgreSQL recommended for production)
# Format: postgresql://username:password@hostname:port/database_name
# For local development: sqlite:///music_studio.db
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# CORS origins - comma-separated list of allowed frontend domains
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Environment mode
FLASK_ENV=production

# JWT token expiration in hours (default: 24)
JWT_EXPIRATION_HOURS=24

# Maximum upload file size in bytes (default: 50MB)
MAX_CONTENT_LENGTH=52428800

# Upload folder path (default: backend/static/uploads)
UPLOAD_FOLDER=backend/static/uploads

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# API CONFIGURATION (For Frontend)
# =============================================================================

# Backend API URL - used by the static website
# This is the URL where your Flask backend is deployed
REACT_APP_API_URL=https://your-backend-app.onrender.com/api
VITE_API_URL=https://your-backend-app.onrender.com/api

# =============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# =============================================================================

# For Render.com:
# - Set these in Render dashboard under Environment Variables
# - No need to set PORT (Render sets this automatically)

# For Heroku:
# - DATABASE_URL is automatically set by Heroku Postgres add-on
# - Set other variables with: heroku config:set VAR=value

# For Railway:
# - DATABASE_URL is automatically set when you add PostgreSQL
# - Set other variables in Railway dashboard

